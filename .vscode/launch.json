{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Basic",
            "type": "cppdbg",
            "request": "launch",
            "program": "basic.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "~/qmk_firmware/.build/test",
            "preLaunchTask": "Test basic",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "c:\\windows\\sysnative\\bash.exe",
                "pipeArgs": ["-c"],
                // Remenber that gdb has to be installed
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c": "c:\\"
            }
        }
    ]
}